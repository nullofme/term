/* pages/turn/turn.wxss */

.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.bg {
  position: absolute;
  z-index: -10;
  width: 100vw;
  height: 100vh;
  top: 0;
}

.bg>image {
  width: 100%;
  height: 100%;
}

.top {
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translate(-50%, 0);
}

.top text {
  color: white;
  text-align: center;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, 0);
}

.top  view {
  position: absolute;
  top: 90rpx;
  left: 50%;
  transform: translate(-50%, 0);
  line-height: 60rpx;
  width: 500rpx;
}

.center {
  width: 650rpx;
  position: absolute;
  height: 80rpx;
  top: 600rpx;
  left: 50rpx;
  display: flex;
  justify-content: space-around;
}

.center>view {
  position: relative;
  z-index: 999;
}

.center .result {
  width: 200rpx;
}



.center .share {
  width: 260rpx;
}

.center .next {
  width: 150rpx;
}

.center image {
  width: 100%;
  height: 80rpx;
}

.center button {
  background: transparent;
  position: absolute;
  margin-left: 20rpx;
  /* left: 50%;
    transform: translate(-50%,0); */
  top: -10rpx;
  color: white;
  z-index: 9999;
  padding: 0;
}

button::after {
  border: none;
}

.bot {
  position: absolute;
  width: 667rpx;
  height: 230rpx;
  top: 750rpx;
  left: 50%;
  transform: translate(-50%, 0);
}

.bot image {
  width: 100%;
  height: 100%;
}

.bot view {
  width: 480rpx;
  margin: -200rpx auto 90rpx;
  word-wrap: break-word;
  word-break: normal;
}
.result button {
  color: blueviolet;
  line-height: 106rpx;
  margin-left:28rpx;
}