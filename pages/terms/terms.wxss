}

.option {
    font-size: 40rpx;
    width: 595rpx;
    height: 200rpx;
    display: flex;
    flex-wrap: wrap;
    margin: 50rpx auto 0;
}

.option_item {
    position: relative;
    text-align: center;
    line-height: 110rpx;
    width: 90rpx;
    height: 100rpx;
    margin: 15rpx;
}

.option_item view {
    position: absolute;
    width: 100rpx;
    height: 110rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 9;
    font-weight: 400;
    color: red
}

.option_item image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100rpx;
    height: 100rpx;
}
