.bg {
    position: absolute;
    z-index: -10;
    width: 100vw;
    height: 100vh;
    top: 0;
}

.level {
    color:red;
    text-align: center;
    margin-top: -80rpx;
}

.box {
    position: relative;
    width: 500rpx;
    height: 500rpx;
    border: 3rpx solid transparent;
    margin: 100rpx auto 0;
}

.box_bg {
    position: absolute;
    top: -20rpx;
    left: 50%;
    transform: translate(-50%, 0);
    width:560rpx;
    height: 550rpx;
}

.ul_x {
    position: absolute;
    left: 0;
    width: 500rpx;
    height: 100rpx;
    display: flex;
}

.ul_y {
    position: absolute;
    top: 0;
    width: 90rpx;
    height: 400rpx;
}

.li_x, .li_y {
    position: relative;
    margin: 20rpx 0 0 20rpx;
    width: 98rpx;
    height: 100rpx;
    text-align: center;
    line-height:90rpx;
    font-size: 36rpx;
    color: #793e0e;
    font-weight: bold;
    /* background: white; */
    /* border-radius: 10rpx; */
}

.xx {
    z-index: -1;
    position: absolute;
    width: 98rpx;
    height: 100rpx;
    left: 0;
}

