/* pages/enter/enter.wxss */

.bg {
    position: absolute;
    width: 100vw;
    height: 100vh;
    z-index: 1;
}

.top {
    width: 420rpx;
    height: 374rpx;
    position: absolute;
    left: 0;
    top: -50rpx;
    z-index: 2;
    animation: top 3s forwards
}

.top button {
    background: transparent;
    text-align: center;
    margin-top: -40%;
    color: burlywood
}
button::after{
    border: none
}
.top image {
    width: 100%;
    height: 100%;
}

.biao {
    width: 496rpx;
    height: 688rpx;
    position: absolute;
    bottom: 280rpx;
    right: 100rpx;
    z-index: 3;
    text-align: center;
    font-size: 80rpx;
    font-weight: 900;
    -webkit-text-stroke: 0.01px white;
    color: white;
}

.biao image {
    width: 100%;
    height: 100%;
}

.toTerms {
    position: absolute;
     font-size: 70rpx;
    top: 445rpx;
    left:150rpx;
    color: rgb(47, 167, 36);
    z-index: 4;
    animation: toTerms 3s infinite
}
.toTurn {
    position: absolute;
    font-size: 70rpx;
    top:250rpx;
    left:80rpx;
    color: yellow;
    z-index: 4;
    animation: toTurn 3s infinite
}
.toRiddle {
    font-size: 70rpx;
    position: absolute;
    top: 45rpx;
    left: 130rpx;
    color: blueviolet;
    z-index: 4;
    animation: toRiddle 25s  infinite  
}
@keyframes top{
    0%{
        transform: translate(800rpx,0)
        
    }
    90%{
        transform: translate(0,0)
    }
    100%{
        transform: translate(0,0)
    }
}
@keyframes toRiddle{
    0%{
        transform: scale(1) rotate(-12deg)
    }
    10%{
        transform: scale(1) rotate(-12deg)
    }
   20%{
        transform: scale(1.2) rotate(-12deg)
    }
    30%{
       transform: scale(1) rotate(-12deg)  
    }
    100%{
        transform: scale(1) rotate(-12deg)
    }
}
@keyframes toTerms{
    0%{
        transform: scale(1) rotate(-2deg)
    }
    70%{
        transform: scale(1) rotate(-2deg)
    }
    80%{
        transform: scale(1.2) rotate(-2deg)
    }
    90%{
        transform: scale(1) rotate(-2deg)
    }
    100%{
        transform: scale(1) rotate(-2deg)
    }
}
@keyframes toTurn{
    0%{
        transform: scale(1) rotate(5deg)
    }
     40%{
        transform: scale(1) rotate(5deg)
    }
   50%{
        transform: scale(1.2) rotate(5deg)
    }
    60%{
        transform: scale(1) rotate(5deg)
    }
    100%{
        transform: scale(1) rotate(5deg)
    }
}
